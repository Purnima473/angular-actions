{
	"compilerOptions": {
		"baseUrl": "",
		"declaration": true, /* generate type definition files; */
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSources": true,
		"lib": [
			"es2015",
			"dom"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true, /* true to support Angular 4.0 */
		"outDir": "dist",
		"paths": {},
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true, /* support for Angular 4.1 */
		"stripInternal": true,
		"target": "es5"
	},
	"files": [
		"./src/index.ts"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true,
		"genDir": "aot-dist"
	}
}